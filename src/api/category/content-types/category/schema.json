{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "section",
        "category",
        "subcategory"
      ],
      "required": true,
      "default": "section"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "navIcon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "showInNav": {
      "type": "boolean",
      "default": true
    },
    "showProducts": {
      "type": "boolean",
      "default": false
    },
    "showRelated": {
      "type": "boolean",
      "default": false
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "parent"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "items"
    },
    "related": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category"
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-card.product-card",
      "mappedBy": "category"
    }
  }
}
